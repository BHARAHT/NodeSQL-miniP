<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
</head>
<body>
    <h1>Display all Users</h1>
    <h2><a href="/users/new">➕ Add User</a>
</h2>
    <table border="1" cellpadding="10" cellspacing="0">
         <tr>
      <th>ID</th><th>Name</th><th>Email</th><th>Age</th><th>Country</th>
    </tr>
    <% users.forEach(user => { %>
      <tr>
        <td><%= user.id %></td>
        <td><a href="/users/<%= user.id %>"><%= user.name %></a></td>
        <td><%= user.email %></td>
        <td><%= user.age %></td>
        <td><%= user.country %></td>
        <td><a href="/users/<%= user.id %>/edit">✏️ Edit User</a></td>
        <td><form action="/users/<%= user.id %>/delete" method="POST" onsubmit="return confirm('Are you sure?');">
  <button class="btn btn-danger">Delete</button>
</form></td>
      </tr>
    <% }) %>
        
    </table>
</body>
</html>